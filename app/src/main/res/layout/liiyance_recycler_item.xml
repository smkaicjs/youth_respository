<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:elevation="2dp"
    android:outlineProvider="bounds"
    android:layout_marginBottom="10dp"
    android:padding="3dp"
    android:paddingStart="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.shimk.Txgc.customUI.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:id="@+id/liuyace_item_imageview"
            android:layout_marginTop="3dp"
            android:scaleType="centerInside"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/liuyace_item_textview_username"
            android:text="用户名"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/liuyace_item_textview_content"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:gravity="right"
        android:textColor="#2566"
        android:id="@+id/liuyace_item_textview_time"/>

</LinearLayout>