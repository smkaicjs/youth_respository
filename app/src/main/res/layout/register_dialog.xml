<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#343BC3DC"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/register_textinput_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:errorTextColor="#BF00BCD4"
        app:hintTextColor="#E64ED153"
        app:boxBackgroundColor="#CD131212"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_name"
            android:hint="用户名（必填）"
            android:elevation="3dp"
            android:outlineProvider="bounds"
            android:maxLines="1"
            android:textSize="15sp"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/register_textinput_studentID"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:errorTextColor="#BF00BCD4"
        app:hintTextColor="#E64ED153"
        app:boxBackgroundColor="#CD131212"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_studentID"
            android:hint="学号（必填）"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="15sp"
            android:elevation="3dp"
            android:outlineProvider="bounds"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/register_textinput_password"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            app:errorTextColor="#BF00BCD4"
            app:hintTextColor="#E64ED153"
            app:boxBackgroundColor="#CD131212"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_password"
                android:hint="密码（必填）"
                android:maxLines="1"
                android:inputType="textPassword"
                android:elevation="3dp"
                android:outlineProvider="bounds"
                android:textSize="15sp"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_textinput_phone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:errorTextColor="#BF00BCD4"

        app:hintTextColor="#E64ED153"
        app:boxBackgroundColor="#CD131212"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_phone"
            android:hint="电话（必填）"
            android:inputType="phone"
            android:maxLines="1"
            android:elevation="3dp"
            android:outlineProvider="bounds"
            android:textSize="15sp"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_textinput_email"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:errorTextColor="#BF00BCD4"
        app:hintTextColor="#E64ED153"

        app:boxBackgroundColor="#CD131212"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_email"

            android:hint="邮箱（选填）"
            android:maxLines="1"
            android:elevation="3dp"
            android:outlineProvider="bounds"
            android:textSize="15sp"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:elevation="3dp"
        android:outlineProvider="bounds"
        android:backgroundTint="#00424242"
        android:textStyle="normal"
        android:layout_marginTop="50dp"

        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"

        android:id="@+id/register_button"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>