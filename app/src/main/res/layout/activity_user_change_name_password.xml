<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5C514747"

    tools:context=".activity.UserEditPersonInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"

            android:id="@+id/User_change_name"/>
        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"

            android:id="@+id/User_change_password_old"/>
        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/User_change_password_new"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/comfirm_button"
            android:text="@string/confirm_modify"
            android:background="@drawable/button_background_radios"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <com.shimk.Txgc.customUI.CircleImageView
            android:id="@+id/user_change_page_user_healder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp" />

        <com.shimk.Txgc.customUI.GraduateTimeCustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:id="@+id/custom_textview_distance_time"/>




    </RelativeLayout>


</LinearLayout>