<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserEditPersonInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#5C514747"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="70dp"
            android:id="@+id/User_change_name"/>
        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/User_change_password_old"/>
        <com.shimk.Txgc.customUI.EditInputCustomEditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/User_change_password_new"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:id="@+id/give_classmates_thing"
            android:textStyle="bold|italic"/>

    </LinearLayout>

</LinearLayout>